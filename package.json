{
  "name": "hearth",
  "version": "3.7.1",
  "private": true,
  "dependencies": {
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.167.1"
  },
  "scripts": {
    "setup": "node scripts/setupFirebaseConfig.js",
    "predev": "node scripts/setupFirebaseConfig.js && node scripts/versioning.js generate",
    "prestart": "node scripts/setupFirebaseConfig.js && node scripts/versioning.js generate",
    "dev": "vite",
    "start": "vite",
    "start:apphosting": "node server/index.js",
    "prebuild": "node scripts/setupFirebaseConfig.js && node scripts/versioning.js check && node scripts/versioning.js generate",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:ci": "eslint \"src/**/*.{js,jsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json,md,html}\" \"public/**/*.{js,css,json,md,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json,md,html}\" \"public/**/*.{js,css,json,md,html}\"",
    "check:lockfile": "npm ci --dry-run",
    "test": "react-scripts test",
    "test:api": "node --test api/__tests__/*.test.js",
    "prepare": "node scripts/installGitHooks.js"
  },
  "simple-git-hooks": {
    "pre-push": "npm run check:lockfile"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31",
    "svgo": "^2.8.0",
    "css-select": "^4.1.0",
    "undici": "^6.21.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "eslint": "^8.46.0",
    "eslint-config-react-app": "^7.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "prettier": "^2.8.8",
    "react-scripts": "^5.0.1",
    "sharp": "^0.32.3",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.19",
    "vite": "^5.4.11",
    "web-streams-polyfill": "^4.2.0",
    "yaml": "^2.8.2"
  }
}
